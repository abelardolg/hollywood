{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [ "es2015" ],
        "sourceMap": true,
        "rootDir": ".",
        "types": [ "node" ],
        "strictFunctionTypes": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts",
        "examples/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
