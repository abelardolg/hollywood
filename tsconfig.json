{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [ "es2015" ],
        "sourceMap": true,
        "rootDir": ".",
        "types": [ "node" ],
        "baseUrl": "src",
        "paths": {
            "Application/*": [ "Application/*" ],
            "Domain/*": [ "Domain/*" ],
            "EventStore/*": [ "EventStore/*" ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts",
        "examples/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
